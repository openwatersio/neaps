  },
  "components": {
    "schemas": {
      "Station": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "lat": {
            "type": "number"
          },
          "lon": {
            "type": "number"
          },
          "type": {
            "type": "string",
            "enum": ["harmonic", "subordinate"]
          },
          "source": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            }
          },
          "distance": {
            "type": "number",
            "description": "Distance from query point in meters (only for proximity searches)"
          },
          "datums": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          },
          "defaultDatum": {
            "type": "string"
          }
        }
      },
      "Extreme": {
        "type": "object",
        "properties": {
          "time": {
            "type": "string",
            "format": "date-time"
          },
          "level": {
            "type": "number"
          },
          "high": {
            "type": "boolean"
          },
          "low": {
            "type": "boolean"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["time", "level", "high", "low", "label"]
      },
      "ExtremesResponse": {
        "type": "object",
        "properties": {
          "datum": {
            "type": "string"
          },
          "units": {
            "type": "string",
            "enum": ["meters", "feet"]
          },
          "station": {
            "$ref": "#/components/schemas/Station"
          },
          "distance": {
            "type": "number"
          },
          "extremes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Extreme"
            }
          }
        }
      },
      "TimelineEntry": {
        "type": "object",
        "properties": {
          "time": {
            "type": "string",
            "format": "date-time"
          },
          "level": {
            "type": "number"
          }
        },
        "required": ["time", "level"]
      },
      "TimelineResponse": {
        "type": "object",
        "properties": {
          "datum": {
            "type": "string"
          },
          "units": {
            "type": "string",
            "enum": ["meters", "feet"]
          },
          "station": {
            "$ref": "#/components/schemas/Station"
          },
          "distance": {
            "type": "number"
          },
          "timeline": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimelineEntry"
            }
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        },
        "required": ["error"]
      }
    }
  }
}
